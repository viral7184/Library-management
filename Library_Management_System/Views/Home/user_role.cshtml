            }
        });
    }
</script>

<script>
        function Delete(id,del)
        {
            if (confirm("Are you sure Delete this Record?")) {
                var deletes =
                   {
                       ID : id,
                       user_role_del: del,
                   }
                {
                    $.ajax({
                        url: '/Home/delete/',
                        data: JSON.toString(deletes),
                        type: 'post',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {

                            var dt = data.data.ID;
                          
                            $('#row_' + dt).hide();

                        }
                    });
                    error: {

                    }
                }
            }
            return false;
        }

</script>


