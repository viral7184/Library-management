            type: 'GET',
            success: function (data) {
                $('#hdnid').val(data.data.ID);
             //   $('#BOOK_NAME').val(data.data.BOOK_NAME);
                var user1 = data.data.userid;
               
                //   $("#department_name").append('<option selected style="color:black;" value="' + user1 + '">' + user2 + '</option>')
