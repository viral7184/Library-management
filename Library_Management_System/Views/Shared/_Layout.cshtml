
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">*@

    @*<link href="~/Scripts/dist/font-awesome.min.css" rel="stylesheet" />*@
    <link href="~/Scripts/dist/ionicons.min.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2.min.css" rel="stylesheet" />

    <link href="~/Scripts/dist/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Scripts/dist/custom.css" rel="stylesheet" />
    <link href="~/Scripts/dist/skin-black.min.css" rel="stylesheet" />

    @*<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>*@
    @*<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>*@
    <script src="~/Scripts/plugins/jquery-2.2.3.min.js"></script>
 
    
    <![endif]-->

    @if (Session["roll"] != null)
    {
        if (Session["roll"].ToString() == "Admin")
        {
            <style>
                .hide_me {
                    display: block;
                }
            </style>
        }
        else if (Session["roll"].ToString() == "Employee")
        {
            <style>
                .hide_me {
                    display: none;
                }
            </style>
        }

    }
    else
    {
        <style>
            .hide_me {
                display: none;
            }
        </style>
    }

</head>

<style>
    .notif {
  position: relative;
  display: block;
  height: 50px;
  width: 50px;
  background: url('http://i.imgur.com/evpC48G.png');
  background-size: contain;
  text-decoration: none;
}
.num {
  position: absolute;
  right: 11px;
  top: 6px;
  color: #fff;
}
</style>


<body class="hold-transition skin-black sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>A</b>LT</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Library</b>management</span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <li class="dropdown messages-menu">
                            <!-- Menu toggle button -->
                            @*<a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span class="label label-success">4</span>
                            </a>*@
                            <ul class="dropdown-menu">
                                <li class="header">You have 4 messages</li>
                                <li>
                                    <!-- inner menu: contains the messages -->
                                    <ul class="menu">
                                        <li>
                                            <!-- start message -->
                                            <a href="#">
                                                <div class="pull-left">
                                                    <!-- User Image -->
                                                    <img src="" class="img-circle" alt="User Image">
                                                </div>
                                                <!-- Message title and timestamp -->
                                                <h4>
                                                    Support Team
                                                    <small><i class="fa fa-clock-o"></i> 5 mins</small>
                                                </h4>
                                                <!-- The message -->
                                                <p>Why not buy a new awesome theme?</p>
                                            </a>
                                        </li>
                                        <!-- end message -->
                                    </ul>
                                    <!-- /.menu -->
                                </li>
                                <li class="footer"><a href="#">See All Messages</a></li>
                            </ul>
                        </li>
                        <!-- /.messages-menu -->
                        <!-- Notifications Menu -->
                        <li class="dropdown notifications-menu">
                            <!-- Menu toggle button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i>
                                    @if(Session["noti"] !=null)
                                    {
                                        <span class="fa fa-bell-o" style="color:red">1</span>
                                    }
                                    else if (Session["expirydate"] != null)
                                    {
                                        <span class="fa fa-bell-o" style="color:red">1</span>
                                    }

                                </i>
                                <span class="label label-warning"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @*<li class="header">You have  notification</li>*@
                                <li>
                                    <!-- Inner Menu: contains the notifications -->
                                      @if (Session["noti"] != null)
                                      {
                                        <div>  @Session["noti"]</div>
                                      }
                                      else if (Session["expirydate"]    != null)
                                      {
                                         <div  style="color:red">@Session["expirydate"]</div>
                                      }
                                </li>
                                @*<li class="footer"><a href="#">View all</a></li>*@
                            </ul>
                        </li>
                        <!-- Tasks Menu -->
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                @*<img src="dist/img/user2-160x160.jpg" class="user-image" alt="User Image">*@
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@Session["login"]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                @*<li class="user-header">
                                    <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        @Session["login"] - Web Developer
                                        <small>Member since Feb. 2017</small>
                                    </p>
                                </li>*@
                                <li class="user-footer">
                                    @*<div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>*@
                                    <div class="pull-right">
                                        <a href="~/Home/login" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @*<div class="user-panel">
                    <div class="pull-left image">
                        <img src="" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Alexander</p>
                        <!-- Status -->
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>*@
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    @*<li class="header">HEADER</li>*@
                    <!-- Optionally, you can add icons to the links -->
                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Book" ? "active" : "")"><a href="~/Home/Book"><i class="fa fa-book"></i> <span>Books</span></a></li>                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "issuebook" ? "active" : "")"><a href="~/Home/issuebook"><i class="fa fa-book"></i> <span>Issue Book</span></a></li>                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "requestbook" ? "active" : "")"><a href="~/Home/requestbook"><i class="fa fa-book"></i> <span>Request Book</span></a></li>                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "department" ? "active" : "")"><a href="~/Home/department"><i class="fa fa-building"></i> <span>Catogery</span></a></li>                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "user_role" ? "active" : "")"><a href="~/Home/user_role"><i class="fa fa-user"></i> <span>User Role</span></a></li>      
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Registration" ? "active" : "")"><a href="~/Home/Registration"><i class="fa fa-registered"></i> <span>Registration</span></a></li>             
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "returnbook" ? "active" : "")"><a href="~/Home/returnbook"><i class="fa fa-book"></i> <span>Issue History</span></a></li>                   
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "help" ? "active" : "")"><a href="~/Home/help"><i class="fa fa-info"></i> <span>Help</span></a></li>                   
                
                </ul>
              
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            <section class="content">
                @RenderBody()
            </section>
        </div>
    </div>

    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            Developed By <a target="_blank" href="http://qwesys.com">Qwesys Digital Solutions</a>
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2016 <a href="#">Company</a>.</strong> All rights reserved.
    </footer>
</body>
</html>

<script src="~/Scripts/plugins/bootstrap.min.js"></script>
<script src="~/Scripts/plugins/jquery.dataTables.min.js"></script>
<script src="~/Scripts/plugins/dataTables.bootstrap.min.js"></script>
<script src="~/Scripts/plugins/bootstrap-datepicker.js"></script>
