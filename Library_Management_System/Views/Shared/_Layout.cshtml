<script src="~/Scripts/plugins/jquery.slimscroll.min.js"></script>
<script src="~/Scripts/plugins/fastclick.js"></script>
<script src="~/Scripts/dist/demo.js"></script>
<script src="~/Scripts/dist/app.min.js"></script>
<script src="~/Scripts/plugins/html5shiv.min.js"></script>
<script src="~/Scripts/plugins/respond.min.js"></script>
